<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="lidar_test_world">

    <!-- ===== Lighting ===== -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- ===== Ground Plane ===== -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- ===== Physics ===== -->
    <physics type="ode">
      <real_time_update_rate>1000</real_time_update_rate>
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
    </physics>

    <!-- ===== Surrounding Walls ===== -->
    <model name="wall_north">
      <static>true</static>
      <pose>0 5 0.5 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>10 0.2 1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>10 0.2 1</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.5 0.5 0.5 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="wall_south">
      <static>true</static>
      <pose>0 -5 0.5 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>10 0.2 1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>10 0.2 1</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.5 0.5 0.5 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="wall_east">
      <static>true</static>
      <pose>5 0 0.5 0 0 1.5708</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>10 0.2 1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>10 0.2 1</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.5 0.5 0.5 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="wall_west">
      <static>true</static>
      <pose>-5 0 0.5 0 0 1.5708</pose>
      <link name="link">
        <collision name="collision">
          <geometry><box><size>10 0.2 1</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>10 0.2 1</size></box></geometry>
          <material><ambient>0.5 0.5 0.5 1</ambient><diffuse>0.5 0.5 0.5 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="person_1">
      <pose>3 -3 0 0 0 0</pose>
      <static>false</static>

      <link name="link">
        <inertial>
          <mass>5.0</mass>
          <inertia>
            <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.1</iyy><iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>

        <!-- Invisible collision box — what the lidar actually hits -->
        <collision name="collision">
          <geometry><box><size>0.5 0.5 1.8</size></box></geometry>
          <pose>0 0 0.9 0 0 0</pose>
        </collision>

        <!-- Human mesh visual -->
        <visual name="visual">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <mesh>
              <uri>/usr/share/gazebo-11/media/models/walk.dae</uri>
              <scale>1.0 1.0 1.0</scale>
            </mesh>
          </geometry>
        </visual>
      </link>

      <plugin name="person_1_planar_move" filename="libgazebo_ros_planar_move.so">
        <ros>
          <namespace>person_1</namespace>
        </ros>
        <update_rate>50</update_rate>
        <publish_odom>false</publish_odom>
        <publish_odom_tf>false</publish_odom_tf>
      </plugin>
    </model>

    <model name="person_2">
      <pose>-3 1 0 0 0 0</pose>
      <static>false</static>

      <link name="link">
        <inertial>
          <mass>5.0</mass>
          <inertia>
            <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.1</iyy><iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>

        <!-- Invisible collision box — what the lidar actually hits -->
        <collision name="collision">
          <geometry><box><size>0.5 0.5 1.8</size></box></geometry>
          <pose>0 0 0.9 0 0 0</pose>
        </collision>

        <!-- Human mesh visual -->
        <visual name="visual">
          <pose>0 0 0 0 0 0</pose>
          <geometry>
            <mesh>
              <uri>/usr/share/gazebo-11/media/models/walk.dae</uri>
              <scale>1.0 1.0 1.0</scale>
            </mesh>
          </geometry>
        </visual>
      </link>

      <plugin name="person_2_planar_move" filename="libgazebo_ros_planar_move.so">
        <ros>
          <namespace>person_2</namespace>
        </ros>
        <update_rate>50</update_rate>
        <publish_odom>false</publish_odom>
        <publish_odom_tf>false</publish_odom_tf>
      </plugin>
    </model>

  </world>
</sdf>
